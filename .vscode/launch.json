{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Train (openpi .venv)",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/scripts/train.py",
        "args": [
          "pi0_opaque_low_mem_finetune",
          "--exp-name=train0810",
          "--resume"
        ],
        "env": {
          "XLA_PYTHON_CLIENT_MEM_FRACTION": "0.9"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "justMyCode": false,
        "subProcess": true
      }
    ]
}
